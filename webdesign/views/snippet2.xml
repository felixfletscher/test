<odoo>
    <template id="place_into_bar2" inherit_id="website.snippets" name="Place into bar2">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="webdesign.s_snippet2"
               t-thumbnail="/webdesign/static/src/img/title1.png"/>
        </xpath>
    </template>

    <!-- Design Snippet2 -->
    <template id="s_snippet2" name="snippet2">
        <section class="s_snippet2">
            <div class="s_snippet2">
                <section
                        class="s_cover parallax s_parallax_no_overflow_hidden bg-black-50 pt96 pb96 o_colored_level o_full_screen_height"
                        data-scroll-background-ratio="1" data-snippet="s_cover" data-name="Cover">
                    <span class="s_parallax_bg oe_img_bg"
                          style="background-image: url('/webdesign/static/src/img/title1.png'); background-position: 100% 0;"/>
                </section>
            </div>
        </section>
    </template>
</odoo>